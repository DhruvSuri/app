<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="2dp">

    <RelativeLayout
        android:id="@+id/newsc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="20"


        android:background="#ffffff">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:scaleType="fitXY"
            android:src="@drawable/image1" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/header">

            <TextView
                android:id="@+id/newstxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"

                android:layout_alignParentStart="false"
                android:layout_marginBottom="5dp"
                android:lineSpacingExtra="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:singleLine="false"
                android:text="@string/newsinfo"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#4d4d4d"
                android:textIsSelectable="false"
                android:textSize="15sp"
                android:typeface="sans" />

            <LinearLayout
                android:id="@+id/linearLayout13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newstxt"
                android:orientation="horizontal"
                android:visibility="invisible">

                <View
                    android:id="@+id/view3"
                    android:layout_width="20dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/newstxt"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:alpha=".5"
                    android:background="#000"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IMPACT "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12sp"
                    android:typeface="serif"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/newstxt"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:alpha=".5"
                    android:background="#000"
                    android:visibility="invisible" />
            </LinearLayout>
            <!-- Content -->


            <RelativeLayout
                android:id="@+id/impactLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout13"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/impact"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="#ffffff"
                    android:lineSpacingExtra="3dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="false"
                    android:text="@string/impact"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#141414"
                    android:textIsSelectable="false"

                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:typeface="normal"
                    android:visibility="invisible" />

            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_toStartOf="@+id/date"
            android:background="#7d000000">


            <TextView
                android:id="@+id/headtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:outlineProvider="paddedBounds"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Right to cancel the property dead if builder fails to deliver in three months"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/moreAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/newsSource"
                android:layout_alignLeft="@+id/newsSource"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:paddingLeft="7dp"
                android:text="more at :"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ebebeb"
                android:textSize="10sp"
                android:visibility="visible"></TextView>

            <TextView
                android:id="@+id/newsSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:paddingBottom="3dp"
                android:paddingLeft="7dp"
                android:text="News Source Name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#2ce3e6"
                android:textSize="11sp"
                android:textStyle="bold"
                android:visibility="visible"></TextView>

            <ImageButton
                android:id="@+id/shareNews"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="#00ffffff"
                android:contentDescription="share"
                android:cropToPadding="false"
                android:elevation="24dp"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/share2"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headtxt"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentRight="false"
                        android:layout_toLeftOf="@+id/textView20"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Anjali Jain"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="|"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/dateText"
                        android:layout_width="80dp"
                        android:layout_height="15dp"
                        android:layout_alignParentTop="false"
                        android:layout_toEndOf="@+id/textView20"
                        android:layout_toRightOf="@+id/textView20"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Jun 24, 2016"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:visibility="visible"></TextView>
                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/brand"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
