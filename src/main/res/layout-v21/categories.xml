<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ca000000"
    android:id="@+id/bottom_sheet"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:elevation="20dp"
    android:touchscreenBlocksFocus="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Categories"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:textStyle="italic"
        android:textSize="15sp"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha=".5"
        android:background="@android:color/white"
        android:layout_margin="20dp"
        android:id="@+id/view2"
        android:layout_below="@+id/textView4" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:padding="10dp"
        android:layout_columnWeight="1"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:padding="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/linearLayout2"
            android:layout_below="@+id/linearLayout8"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:id="@+id/bookmark"
                android:src="@drawable/bookmark2"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:padding="10dp"
        android:layout_columnWeight="1"
        android:id="@+id/linearLayout7"
        android:layout_above="@+id/economy"
        android:layout_alignLeft="@+id/business"
        android:layout_alignStart="@+id/business">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/allnews"
            android:src="@drawable/news"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:padding="10dp"
        android:layout_columnWeight="1"
        android:id="@+id/linearLayout6"
        android:layout_alignTop="@+id/linearLayout4"
        android:layout_centerHorizontal="true">


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:padding="10dp"
        android:layout_columnWeight="1"
        android:id="@+id/linearLayout5"
        android:layout_below="@+id/linearLayout7"
        android:layout_marginTop="24dp"
        android:layout_alignRight="@+id/linearLayout7"
        android:layout_alignEnd="@+id/linearLayout7"
        android:layout_centerHorizontal="true">


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:padding="10dp"
        android:layout_columnWeight="1"
        android:id="@+id/linearLayout3"
        android:layout_alignTop="@+id/linearLayout5"
        android:layout_alignLeft="@+id/linearLayout4"
        android:layout_alignStart="@+id/linearLayout4">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:padding="10dp"
        android:layout_columnWeight="1"
        android:id="@+id/linearLayout8"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignLeft="@+id/linearLayout3"
        android:layout_alignStart="@+id/linearLayout3">


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:padding="10dp"
        android:layout_columnWeight="1"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/linearLayout5"
        android:layout_alignStart="@+id/linearLayout5"
        android:layout_marginBottom="27dp"
        android:layout_toStartOf="@+id/linearLayout3"
        android:layout_alignRight="@+id/linearLayout7"
        android:layout_alignEnd="@+id/linearLayout7">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Business"
            android:id="@+id/textView6"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/global"
        android:src="@drawable/global"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/business"
        android:layout_alignRight="@+id/tax"
        android:layout_alignEnd="@+id/tax" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/business"
        android:src="@drawable/business"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/law"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/law"
        android:src="@drawable/law"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/linearLayout8"
        android:layout_alignLeft="@+id/business"
        android:layout_alignStart="@+id/business" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/tax"
        android:src="@drawable/tax"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/global"
        android:layout_alignRight="@+id/view2"
        android:layout_alignEnd="@+id/view2" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/finance"
        android:src="@drawable/money"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/global"
        android:layout_alignLeft="@+id/tax"
        android:layout_alignStart="@+id/tax" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/economy"
        android:src="@drawable/economy"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/finance"
        android:layout_alignRight="@+id/finance"
        android:layout_alignEnd="@+id/finance" />


</RelativeLayout>
