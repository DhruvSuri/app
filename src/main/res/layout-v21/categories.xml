<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#dc000000"
    android:id="@+id/bottom_sheet"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:elevation="20dp"
  >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Categories"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffffff"
        android:id="@+id/view2"
        android:visibility="visible"
        android:layout_alignParentTop="true" />
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:touchscreenBlocksFocus="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/textView4"
        android:layout_marginBottom="15dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/allnews"
            android:src="@drawable/news"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/economy"
            android:src="@drawable/economy"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/business"
            android:src="@drawable/business"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/finance"
            android:src="@drawable/finance"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView12"
            android:layout_marginTop="30dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/global"
            android:src="@drawable/global"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/money" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/money"
            android:src="@drawable/money"
            android:scaleType="fitXY"

            android:layout_below="@+id/textView14"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/tax"
            android:src="@drawable/tax"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView15"
            android:layout_marginTop="30dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/law"
            android:src="@drawable/law"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/textView15"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/bookmark"
            android:src="@drawable/bookmark"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView16"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="All News"
            android:id="@+id/textView12"
            android:layout_below="@+id/allnews"
            android:layout_alignRight="@+id/allnews"
            android:layout_alignEnd="@+id/allnews"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Economy"
            android:id="@+id/textView14"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_alignStart="@+id/economy"
            android:layout_alignEnd="@+id/economy"
            android:layout_below="@+id/economy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Money"
            android:id="@+id/textView15"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_below="@+id/money"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Global"
            android:id="@+id/textView16"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_alignStart="@+id/global"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/global"
            android:layout_alignParentStart="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Bookmarks"
            android:id="@+id/textView17"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_below="@+id/bookmark"
            android:layout_alignStart="@+id/bookmark"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Law"
            android:id="@+id/textView19"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/law" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tax"
            android:id="@+id/textView30"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_below="@+id/tax"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/tax"
            android:layout_alignEnd="@+id/tax" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Finance"
            android:id="@+id/textView31"
            android:textColor="#ffffff"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"

            android:layout_alignParentRight="false"
            android:gravity="center_horizontal"
            android:layout_alignRight="@+id/tax"
            android:layout_below="@+id/finance" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Business"
            android:id="@+id/textView32"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/textView14"

            android:layout_alignLeft="@+id/global"
            android:layout_below="@+id/business" />

    </RelativeLayout>


</RelativeLayout>
