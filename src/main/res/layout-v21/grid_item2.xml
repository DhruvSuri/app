<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingBottom="2dp">

        <ImageView
            android:id="@+id/newsimage"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:contentDescription="@string/action_settings"
            android:src="@drawable/placeholder"
            android:scaleType="centerCrop" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:id="@+id/gradient"
            android:background="@drawable/grad3"
            android:layout_alignBottom="@+id/newsimage"></FrameLayout>

        <TextView
            android:id="@+id/headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Right to cancel the property dead if builder fails to deliver in three months"
            android:gravity="center"
            android:paddingBottom="8dp"
            fontPath="fonts/HelveticaNeueLight.ttf"
            tools:ignore="MissingPrefix"
            android:paddingTop="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffffff" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/newsimage"
            android:id="@+id/clickFrame"></FrameLayout>

    </RelativeLayout>

