<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".NewsAdapter"
    android:background="#616161"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="0dp"
        card_view:cardUseCompatPadding="true"
        android:layout_marginBottom="20dp"
        card_view:cardElevation="5dp"
        android:layout_below="@+id/imageView2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="20"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:id="@+id/newsc">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/imageView2"
                android:src="@drawable/image1"
                android:background="#000000"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/dummyImageForCache"
                android:visibility="invisible"
                android:scaleType="fitXY" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="head"
                android:id="@+id/headtxt"
                android:padding="5dp"
                android:textSize="30sp"
                android:typeface="serif"
                android:textColor="#000000"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/newstxt"
                android:padding="5dp"

                android:text="@string/newsinfo"
                android:textSize="15sp"
                android:typeface="normal"
                android:textIsSelectable="false"
                android:singleLine="false"
                android:lineSpacingExtra="4dp"
                android:layout_below="@+id/date"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#4a4a4a"
                android:id="@+id/view"
                android:layout_below="@+id/newstxt"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/share"
                android:src="@drawable/share2"
                android:scaleType="fitXY"
                android:background="#00ffffff"
                android:layout_alignTop="@+id/comment"
                android:layout_alignRight="@+id/playstore"
                android:layout_alignEnd="@+id/playstore"
                android:layout_marginTop="3dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="For more :"
                android:id="@+id/moreAt"
                android:textColor="#0c0c0c"
                android:textSize="12sp"
                android:paddingLeft="10dp"
                android:layout_below="@+id/newstxt"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="news source name"
                android:id="@+id/newsSource"
                android:textColor="#c94144"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:layout_below="@+id/moreAt"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"></TextView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="date"
                android:id="@+id/author"
                android:textColor="#ffffff"
                android:textSize="11sp"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:background="@drawable/bar"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_below="@+id/headtxt"
                android:layout_marginTop="0dp"></TextView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/bookmark"
                android:scaleType="fitXY"
                android:src="@drawable/book"
                android:layout_alignBottom="@+id/comment"
                android:layout_alignLeft="@+id/playstore"
                android:layout_alignStart="@+id/playstore" />

            <ImageButton
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:id="@+id/playstore"
                android:src="@drawable/playstore"
                android:scaleType="fitXY"
                android:layout_below="@+id/view"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="#00ffffff"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="invisible"/>



            <ImageButton
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:id="@+id/logo"
                android:src="@drawable/share2"
                android:scaleType="fitXY"
                android:background="#00ffffff"
                android:visibility="invisible"
                android:layout_alignWithParentIfMissing="false"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="3dp"
                android:paddingLeft="3dp"
                android:layout_below="@+id/newstxt"
                android:layout_alignStart="@+id/moreAt" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/comment"
                android:src="@drawable/heart"
                android:scaleType="fitXY"
                android:layout_below="@+id/view"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>