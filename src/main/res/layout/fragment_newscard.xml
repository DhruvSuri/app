<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#f9f9f9">

    <RelativeLayout
        android:id="@+id/newsc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="20"


        android:padding="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottombar">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                android:visibility="visible"
                android:translationZ="3dp" />

            <RelativeLayout
                android:id="@+id/stack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageView2"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="2dp"
                android:elevation="5dp"
                android:translationZ="2dp">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/summaryTab"
                    android:id="@+id/summaryMargin"></FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:id="@+id/impactMargin"
                    android:layout_alignParentLeft="true"
                    android:layout_alignRight="@+id/summaryTab"
                    android:visibility="gone" />

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/newsImpactTab"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true"
                    card_view:cardCornerRadius="0dp"
                    android:layout_alignEnd="@+id/newsBody"
                    android:layout_toEndOf="@+id/summaryTab"
                    android:backgroundTint="#ad00bcd4"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@+id/summaryMargin">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:id="@+id/impactTabs">


                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Impact"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="12dp"
                            tools:ignore="MissingPrefix"
                            fontPath="fonts/HelveticaNeueMedium.ttf"
                            android:typeface="serif"
                            android:visibility="visible"
                            android:textColor="#ffffff"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp" />


                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/summaryTab"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:animateLayoutChanges="true"
                    android:layout_height="match_parent"
                    card_view:cardCornerRadius="0dp"
                    android:backgroundTint="#009688"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@+id/impactMargin">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:id="@+id/summaryTabs"
                        android:layout_height="match_parent"
                        android:clickable="false">


                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Summary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="12dp"
                            tools:ignore="MissingPrefix"
                            fontPath="fonts/HelveticaNeueMedium.ttf"
                            android:typeface="serif"
                            android:visibility="visible"
                            android:textColor="#ffffff"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp" />



                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/newsBody"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    card_view:cardCornerRadius="0dp"
                    android:layout_marginTop="25dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#009688"
                        android:paddingTop="1dp">

                        <TextView
                            android:id="@+id/newstxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:lineSpacingExtra="3dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="5dp"
                            android:singleLine="false"
                            android:text="@string/newsinfo"
                            fontPath="fonts/HelveticaNeueLight.ttf"
                            android:textColor="#000000"
                            android:textIsSelectable="false"
                            android:textSize="15dp"
                            tools:ignore="MissingPrefix"
                            android:letterSpacing="0.06"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentTop="true"
                            android:background="#ffffff" />

                    </RelativeLayout>



                </android.support.v7.widget.CardView>


            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/bookmarkLine"
            android:layout_alignParentStart="true"
            android:visibility="gone">



            <RelativeLayout
                android:id="@+id/linearLayout13"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/newstxt"
                android:orientation="horizontal"
                android:visibility="gone"
                android:translationZ="1dp"
                android:layout_margin="5dp"
                android:background="#89000000">

                <View
                    android:id="@+id/view3"
                    android:layout_width="20dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/newstxt"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:alpha=".5"
                    android:background="#000"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IMPACT "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="13dp"
                    tools:ignore="MissingPrefix"
                    fontPath="fonts/HelveticaNeueMedium.ttf"
                    android:typeface="serif"
                    android:visibility="visible"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/newstxt"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:alpha=".5"
                    android:background="#000"
                    android:visibility="gone" />

            </RelativeLayout>

            <!-- Content -->


            <RelativeLayout
                android:id="@+id/impactLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/impact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="#ffffff"
                    android:lineSpacingExtra="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="false"
                    android:text="@string/impact"
                    fontPath="fonts/HelveticaNeueLight.ttf"
                    tools:ignore="MissingPrefix"
                    android:textColor="#000000"
                    android:textIsSelectable="false"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:typeface="normal"
                    android:visibility="gone" />

            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/brand"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:background="#353535"
            android:visibility="invisible">

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/newstxt"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:alpha=".5"
                android:background="#000"
                android:visibility="visible" />



            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business | Finance\nSimplified"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                fontPath="fonts/HelveticaNeueMedium.ttf"
                tools:ignore="MissingPrefix"

                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="visible"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:typeface="sans" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:src="@drawable/playstore"
                android:scaleType="fitXY"
                android:layout_alignBottom="@+id/textView9"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/logo"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <View
            android:id="@+id/bookmarkLine"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/header"
            android:background="#2ce3e6"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/bottombar"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="false"
            android:visibility="visible"
            android:gravity="center_horizontal">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/bubbles_rv"
                android:scrollbars="none"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:elevation="2dp" />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/grad3">


        <TextView
            android:id="@+id/headtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:gravity="center_horizontal"
            android:outlineProvider="paddedBounds"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Right to cancel the property dead if builder fails to deliver in three months"
            android:textAlignment="center"
            fontPath="fonts/HelveticaNeueMedium.ttf"
            tools:ignore="MissingPrefix"

            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold"

            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/moreAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/newsSource"
            android:layout_alignLeft="@+id/newsSource"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:paddingLeft="7dp"
            android:text="more at :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ebebeb"
            android:textSize="10sp"
            android:visibility="gone"></TextView>

        <TextView
            android:id="@+id/newsSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:paddingBottom="3dp"
            android:paddingLeft="7dp"
            android:text="News Source Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#2ce3e6"
            android:textSize="11sp"
            android:textStyle="bold"
            android:visibility="gone"></TextView>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headtxt"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentRight="false"
                    android:layout_toLeftOf="@+id/textView20"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Anjali Jain"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff"
                    android:textSize="10sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="|"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="80dp"
                    android:layout_height="15dp"
                    android:layout_alignParentTop="false"
                    android:layout_toEndOf="@+id/textView20"
                    android:layout_toRightOf="@+id/textView20"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Jun 24, 2016"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff"
                    android:textSize="10sp"
                    android:visibility="visible"></TextView>
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:id="@+id/bookmark"
            android:src="@drawable/librarystamp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/newsSource"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/shareNews"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00ffffff"
            android:contentDescription="share"
            android:cropToPadding="false"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/share2"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/bookmark"
            android:layout_marginBottom="25dp" />



    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/blurFrame"
        android:layout_height="match_parent"
        android:clickable="false"
        android:background="#00ffffff"></FrameLayout>



</RelativeLayout>