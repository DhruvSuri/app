<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#f9f9f9">

    <RelativeLayout
        android:id="@+id/newsContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="20"


        android:padding="2dp"
        android:layout_below="@+id/header">


        <RelativeLayout
            android:id="@+id/stack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageView2"
            android:layout_above="@+id/bottombar">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tabLayout"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/summaryTab"
                    android:id="@+id/summaryMargin"
                    android:visibility="visible"></FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:id="@+id/impactMargin"
                    android:layout_alignParentLeft="true"
                    android:layout_alignRight="@+id/summaryTab"
                    android:visibility="gone" />

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/newsImpactTab"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true"
                    card_view:cardCornerRadius="3dp"
                    android:layout_alignEnd="@+id/newsBody"
                    android:backgroundTint="@color/secondaryTab"
                    android:layout_toRightOf="@+id/summaryTab"
                    android:layout_below="@+id/summaryMargin"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentRight="false"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:id="@+id/impactTabs">


                        <TextView
                            android:id="@+id/impactLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Impact"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="15sp"
                            tools:ignore="MissingPrefix"
                            fontPath="fonts/HelveticaNeueLight.ttf"
                            android:typeface="serif"
                            android:visibility="visible"
                            android:textColor="#ffffff"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp" />


                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/summaryTab"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:animateLayoutChanges="false"
                    android:layout_height="match_parent"
                    card_view:cardCornerRadius="3dp"
                    android:backgroundTint="@color/tabColor"
                    android:layout_below="@+id/impactMargin">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:id="@+id/summaryTabs"
                        android:layout_height="match_parent"
                        android:clickable="false">


                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Summary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="15sp"
                            tools:ignore="MissingPrefix"
                            fontPath="fonts/HelveticaNeueLight.ttf"
                            android:typeface="serif"
                            android:visibility="visible"
                            android:textColor="#ffffff"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp" />



                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/newsBody"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="0dp"
                android:visibility="visible"
                android:layout_below="@+id/bodyMargin">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#42A5F5">

                    <TextView
                        android:id="@+id/newstxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:lineSpacingExtra="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="5dp"
                        android:singleLine="false"
                        android:text="@string/newsinfo"
                        fontPath="fonts/HelveticaNeueLight.ttf"
                        android:textColor="#000000"
                        android:textIsSelectable="false"
                        android:textSize="15dp"
                        tools:ignore="MissingPrefix"
                        android:letterSpacing="0.06"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:background="#ffffff" />

                    <View android:background="@color/tabColor"
                        android:layout_width = "match_parent"
                        android:layout_height="4dp"
                        android:id="@+id/line"
                        android:visibility="invisible" />

                </RelativeLayout>



            </android.support.v7.widget.CardView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/bodyMargin"
                android:visibility="gone"></FrameLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottombar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="false"
            android:visibility="visible"
            android:gravity="center_horizontal">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/bubbles_rv"
                android:scrollbars="none"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:elevation="2dp" />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/shareLayout"
        android:layout_below="@+id/header"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        android:layout_alignBottom="@+id/newsContent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contentLayout"
            android:layout_below="@+id/summary"
            android:paddingTop="3dp"
            android:background="#11b9da"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/newsinfo"
                android:id="@+id/shareNewTxt"
                android:background="#ffffff"
                android:padding="5dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/summary"
            android:background="#11b9da"
            android:padding="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignEnd="@+id/contentLayout"
            android:layout_alignStart="@+id/contentLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Summary"
                android:id="@+id/shareSummary"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/impactLay"
            android:paddingTop="3dp"
            android:background="#11b9da"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_below="@+id/impactShareTab"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/newsinfo"
                android:id="@+id/shareImpacttxt"
                android:background="#ffffff"
                android:padding="5dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/impactShareTab"
            android:background="#11b9da"
            android:padding="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/contentLayout"
            android:layout_alignEnd="@+id/contentLayout"
            android:layout_alignStart="@+id/contentLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Impact"
                android:id="@+id/shareImpact"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"
            android:visibility="visible" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/grad3"
            android:id="@+id/gradient"></FrameLayout>

        <TextView
            android:id="@+id/headtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:gravity="center_horizontal"
            android:outlineProvider="paddedBounds"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Right to cancel the property dead if builder fails to deliver in three months"
            android:textAlignment="center"
            fontPath="fonts/HelveticaNeueMedium.ttf"
            tools:ignore="MissingPrefix"

            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold"

            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/moreAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/newsSource"
            android:layout_alignLeft="@+id/newsSource"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:paddingLeft="7dp"
            android:text="more at :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ebebeb"
            android:textSize="10sp"
            android:visibility="gone"></TextView>

        <TextView
            android:id="@+id/newsSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:paddingBottom="3dp"
            android:paddingLeft="7dp"
            android:text="News Source Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#2ce3e6"
            android:textSize="11sp"
            android:textStyle="bold"
            android:visibility="gone"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_below="@+id/headtxt"
            android:id="@+id/authorDate_layout">

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_toLeftOf="@+id/textView5"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Anjali Jain"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="|"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="80dp"
                android:layout_height="15dp"
                android:layout_alignParentTop="false"
                android:layout_toEndOf="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Jun 24, 2016"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:visibility="visible" />
        </RelativeLayout>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:id="@+id/bookmark"
            android:src="@drawable/librarystamp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/newsSource"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/shareNews"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00ffffff"
            android:contentDescription="share"
            android:cropToPadding="false"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/share2"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/bookmark"
            android:layout_marginBottom="25dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/brand"></RelativeLayout>


    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/blurFrame"
        android:layout_height="match_parent"
        android:clickable="false"
        android:background="#00ffffff"
        android:visibility="visible"></FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/bookmarkFrame"
        android:layout_height="match_parent"
        android:clickable="false"
        android:background="#00ffffff"
        android:visibility="visible"
        android:layout_above="@+id/newsContent" />


</RelativeLayout>