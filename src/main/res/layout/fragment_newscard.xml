<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="20"
    style="@style/Base.TextAppearance.AppCompat.Body1"
    android:id="@+id/newsc"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:background="#000">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/top"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:background="@drawable/curved">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/topLogo"
            android:src="@drawable/round_logo"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:visibility="visible"
            android:layout_marginBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Daily updates on Economy, Finance, Business, Tax &amp; Law in 70 words"
            android:id="@+id/topTxt"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:visibility="visible"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:id="@+id/imageView2"
        android:src="@drawable/image1"
        android:scaleType="fitXY"
        android:layout_below="@+id/top"
        android:padding="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/dummyImageForCache"
        android:visibility="invisible"
        android:scaleType="fitXY" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="This is news heading in two line"
        android:id="@+id/headtxt"
        android:padding="10dp"
        android:textSize="25sp"
        android:typeface="sans"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/newstxt"

        android:text="@string/newsinfo"
        android:textSize="15sp"
        android:typeface="normal"
        android:textIsSelectable="false"
        android:singleLine="false"
        android:lineSpacingExtra="7dp"
        android:layout_below="@+id/date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="5dp"
        android:textColor="#ffffff" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/share"
        android:src="@drawable/share2"
        android:scaleType="fitXY"
        android:background="#00ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="5dp"
        android:cropToPadding="false"
        android:padding="2dp"
        android:elevation="0dp"
        android:contentDescription="share" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="news source name"
        android:id="@+id/newsSource"
        android:textColor="#c94144"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/newstxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></TextView>

    <TextView
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="date"
        android:id="@+id/date"
        android:textColor="#ffffff"
        android:textSize="8dp"
        android:paddingLeft="20dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:background="@drawable/bar"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/headtxt"
        android:layout_marginTop="0dp"></TextView>

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="By Anjali Jain"
        android:id="@+id/author"
        android:textColor="#505050"
        android:textSize="8dp"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/headtxt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/bookmark"
        android:scaleType="fitXY"
        android:src="@drawable/notbookmark"
        android:elevation="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/author"
        android:layout_alignEnd="@+id/author" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="For more :"
        android:id="@+id/moreAt"
        android:textColor="#0c0c0c"
        android:textSize="12sp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/newsSource"
        android:layout_alignRight="@+id/date"
        android:layout_alignEnd="@+id/date"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="75"
        android:id="@+id/likes"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true" />


</RelativeLayout>