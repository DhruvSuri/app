<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.app.azazte.azazte.HomeScreen"
    android:background="#f9f9f9"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/allNewslay"
        android:layout_below="@+id/header">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/all_rv"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_margin="2dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/businessLay"
        android:layout_below="@+id/line1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Business"
            android:id="@+id/textView8"
            android:textSize="18dp"
            android:textColor="#525252"
            android:layout_marginLeft="15dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/business_rv"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_below="@+id/textView8"
            android:layout_margin="2dp" />
    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/allNewslay"
        android:background="#cecece"
        android:visibility="invisible"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/economyLay"
        android:layout_below="@+id/line2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Economy"
            android:id="@+id/textView8"
            android:textSize="18dp"
            android:textColor="#525252"
            android:layout_marginLeft="15dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/eco_rv"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_below="@+id/textView8"
            android:layout_margin="2dp" />
    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/businessLay"
        android:background="#cecece"
        android:visibility="invisible"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/worldlay"
        android:layout_below="@+id/line3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="World"
            android:id="@+id/textView8"
            android:textSize="18dp"
            android:textColor="#525252"
            android:layout_marginLeft="15dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/world_rv"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_below="@+id/textView8"
            android:layout_margin="2dp" />
    </RelativeLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/economyLay"
        android:background="#cecece"
        android:visibility="invisible"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/moneylay"
        android:layout_below="@+id/line4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Money"
            android:id="@+id/textView8"
            android:textSize="18dp"
            android:textColor="#525252"
            android:layout_marginLeft="15dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/money_rv"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_below="@+id/textView8"
            android:layout_margin="2dp" />
    </RelativeLayout>

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/worldlay"
        android:background="#cecece"
        android:visibility="invisible"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/financelay"
        android:layout_below="@+id/line5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Finance"
            android:id="@+id/textView8"
            android:textSize="18dp"
            android:textColor="#525252"
            android:layout_marginLeft="15dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fin_rv"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_below="@+id/textView8"
            android:layout_margin="2dp" />
    </RelativeLayout>

    <View
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/moneylay"
        android:background="#cecece"
        android:visibility="invisible"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lawLay"
        android:layout_below="@+id/line6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Law"
            android:id="@+id/textView8"
            android:textSize="18dp"
            android:textColor="#525252"
            android:layout_marginLeft="15dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/law_rv"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_below="@+id/textView8"
            android:layout_margin="2dp" />
    </RelativeLayout>

    <View
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/financelay"
        android:background="#cecece"
        android:visibility="invisible"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/techLay"
        android:layout_below="@+id/line7"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Technology"
            android:id="@+id/textView8"
            android:textSize="18dp"
            android:textColor="#525252"
            android:layout_marginLeft="15dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/tech_rv"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_below="@+id/textView8"
            android:layout_margin="2dp" />
    </RelativeLayout>

    <View
        android:id="@+id/line7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lawLay"
        android:background="#cecece"
        android:visibility="invisible"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:padding="2dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:contentDescription="@string/action_settings"
            android:src="@drawable/placeholder"
            android:scaleType="centerCrop" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:id="@+id/gradient"
            android:background="@drawable/grad3"
            android:layout_alignBottom="@+id/headerImage">

        </FrameLayout>

        <TextView
            android:id="@+id/headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Right to cancel the property dead if builder fails to deliver in three months"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffffff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_alignBottom="@+id/headerImage"
            android:id="@+id/clickFrame"></FrameLayout>

    </RelativeLayout>



    <!--   <include
           layout="@layout/topbar"
           android:layout_width="wrap_content"
           android:layout_height="50dp" /> -->

</RelativeLayout>