<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.app.azazte.azazte.HomeScreen"
    android:background="#bbbbbb">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/grid_item2"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingLeft="1dp"
        android:paddingRight="1dp" />

    <com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout"
            android:padding="2dp">

            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:contentDescription="@string/action_settings"
                android:src="@drawable/placeholder"
                android:scaleType="centerCrop" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:id="@+id/gradient"
                android:background="@drawable/grad3"
                android:layout_alignBottom="@+id/headerImage">

            </FrameLayout>

            <TextView
                android:id="@+id/headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Right to cancel the property dead if builder fails to deliver in three months"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textColor="#ffffffff" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_alignBottom="@+id/headerImage"
                android:id="@+id/clickFrame"></FrameLayout>

        </RelativeLayout>

        </com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader>

 <!--   <include
        layout="@layout/topbar"
        android:layout_width="wrap_content"
        android:layout_height="50dp" /> -->

</RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
