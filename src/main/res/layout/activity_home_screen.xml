<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.app.azazte.azazte.HomeScreen"
    android:background="#767676"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/topbar"></include>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:id="@+id/relativeLayout">

            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:contentDescription="@string/action_settings"
                android:src="@drawable/placeholder"
                android:scaleType="centerCrop" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:id="@+id/gradient"
                android:background="@drawable/grad3"
                android:layout_alignBottom="@+id/headerImage">

            </FrameLayout>

            <TextView
                android:id="@+id/headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Right to cancel the property dead if builder fails to deliver in three months"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textColor="#ffffffff" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_alignBottom="@+id/headerImage"
                android:id="@+id/clickFrame"></FrameLayout>

        </RelativeLayout>




    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout" />

</RelativeLayout>


