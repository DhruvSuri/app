<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:touchscreenBlocksFocus="true"><RelativeLayout android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/topBar"
    android:background="#000000"
    android:visibility="visible"
    android:layout_alignParentBottom="false"
    android:focusable="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="10dp"
    android:translationZ="5dp">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/back"
        android:src="@drawable/backarrow"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Settings"
        android:id="@+id/categoriesTextMenu"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/back"
        android:layout_alignParentBottom="false" />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/h"
        android:src="@drawable/home"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="2dp"
        android:layout_marginRight="10dp" />


</RelativeLayout>

    <RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity=""
    android:background="#c4c4c4"
    android:contextClickable="true"
    android:elevation="20dp"
    android:orientation="vertical"

    android:layout_marginTop="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp" >








            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/col1"
                android:layout_toStartOf="@+id/space2"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="false"
                    android:id="@+id/notificationLay"
                    android:layout_toLeftOf="@+id/space2"
                    android:elevation="3dp"
                    android:background="#cf000000"
                    android:visibility="visible"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/notification"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"
                        android:src="@drawable/bellon"
                        android:layout_alignParentTop="false"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:text="Notifications"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:layout_alignParentBottom="false"
                        android:layout_below="@+id/notification"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="5dp" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentStart="false"
                    android:id="@+id/sharelay"
                    android:layout_toLeftOf="@+id/space2"
                    android:layout_below="@+id/notificationLay"
                    android:layout_marginBottom="5dp"
                    android:elevation="3dp"
                    android:layout_marginTop="30dp"
                    android:background="#cf000000"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/shareApp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"
                        android:src="@drawable/share"
                        android:layout_alignLeft="@+id/textView26"
                        android:layout_alignStart="@+id/textView26"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/privacy"
                        android:layout_alignLeft="@+id/privacy"
                        android:layout_alignRight="@+id/privacy"
                        android:layout_alignStart="@+id/privacy"
                        android:layout_below="@+id/shareApp"
                        android:gravity="center_horizontal"
                        android:text="Share app"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentStart="false"
                    android:id="@+id/feedlay"
                    android:layout_toLeftOf="@+id/space2"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/sharelay"
                    android:elevation="3dp"
                    android:background="#cf000000"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/feedback"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"
                        android:src="@drawable/feed"
                        android:layout_above="@+id/textView29"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="false"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true" />


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/feedback"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:text="Feedback"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp" />


                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:id="@+id/space2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="false"
                    android:id="@+id/privacylay"
                    android:layout_alignParentEnd="false"
                    android:layout_marginBottom="5dp"
                    android:elevation="3dp"
                    android:layout_below="@+id/ratelay"
                    android:background="#cf000000"
                    android:visibility="visible">


                    <ImageView
                        android:id="@+id/privacy"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="false"
                        android:layout_below="@+id/view2"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/privacy"
                        android:layout_centerHorizontal="true" />
                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/shareApp"
                        android:layout_alignStart="@+id/shareApp"
                        android:gravity="center_horizontal"
                        android:text="Privacy"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:layout_below="@+id/privacy"
                        android:layout_alignRight="@+id/shareApp"
                        android:layout_alignEnd="@+id/shareApp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="false"
                    android:id="@+id/contactlay"
                    android:layout_alignParentEnd="false"
                    android:layout_marginBottom="5dp"
                    android:elevation="3dp"
                    android:layout_below="@+id/privacylay"
                    android:background="#cf000000"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/mailus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"
                        android:src="@drawable/mailus"
                        android:layout_alignParentBottom="false"
                        android:layout_alignLeft="@+id/textView29"
                        android:layout_alignStart="@+id/textView29"
                        android:layout_below="@+id/textView29"
                        android:layout_marginTop="10dp"
                        android:layout_alignWithParentIfMissing="false"
                        android:layout_centerHorizontal="true" />


                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Contact us"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:layout_below="@+id/mailus"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="false"
                    android:id="@+id/ratelay"
                    android:layout_alignParentEnd="false"
                    android:layout_marginBottom="5dp"
                    android:elevation="3dp"
                    android:layout_below="@+id/imagelay"
                    android:background="#cf000000"
                    android:visibility="visible"
                    android:layout_marginTop="25dp">

                    <ImageView
                        android:id="@+id/rate"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/view2"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/rate"
                        android:layout_centerHorizontal="true" />



                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView25"
                        android:gravity="center_horizontal"
                        android:text="Rate us"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/rate" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:id="@+id/imagelay"
                    android:layout_alignParentEnd="false"
                    android:layout_toEndOf="@+id/space2"
                    android:layout_marginBottom="5dp"
                    android:elevation="3dp"
                    android:background="#cf000000"
                    android:visibility="visible"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/noimage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="false"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/imageon"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Images"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:layout_below="@+id/noimage"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="5dp" />


                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/notificationLay"
                android:layout_marginTop="110dp"
                android:background="#000000"
                android:visibility="visible" />

            <RelativeLayout  android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/col3"
            android:visibility="visible"
            android:layout_toEndOf="@+id/space2"
                android:gravity="center_horizontal">


                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentStart="false"
                    android:id="@+id/aboutlay"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/space2"
                    android:layout_alignParentLeft="false"
                    android:layout_below="@+id/twilightlay"
                    android:elevation="3dp"
                    android:background="#cf000000"
                    android:visibility="visible"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:id="@+id/about"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignStart="@+id/night"
                        android:layout_below="@+id/view2"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/about"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/about"
                        android:gravity="center_horizontal"
                        android:text="About us"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp" />

                </RelativeLayout>





                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:id="@+id/twilightlay"
                    android:layout_alignParentEnd="false"
                    android:layout_toEndOf="@+id/space2"
                    android:layout_marginBottom="5dp"
                    android:elevation="3dp"
                    android:background="#cf000000"
                    android:visibility="visible"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/night"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentTop="false"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"
                        android:src="@drawable/lightoff"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true" />
                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Twilight Mode"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:layout_alignParentBottom="false"
                        android:layout_below="@+id/night"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentEnd="false"
                    android:layout_toEndOf="@+id/space2"
                    android:id="@+id/writelay"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/aboutlay"
                    android:elevation="3dp"
                    android:background="#cf000000"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/write"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignStart="@+id/about"
                        android:layout_below="@+id/textView27"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/write"
                        android:layout_centerHorizontal="true" />


                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/write"
                        android:gravity="center_horizontal"
                        android:text="Write for us"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/close"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/homeFilter" />

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/refreshfilter"
        android:layout_alignParentTop="true"
        android:id="@+id/homeFilter"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"></FrameLayout>

</RelativeLayout>