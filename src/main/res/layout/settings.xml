<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ca000000"
    android:id="@+id/settingsdrawers"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
   android:layout_gravity=""
    android:elevation="20dp"
    android:touchscreenBlocksFocus="false"
    android:contextClickable="true">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:touchscreenBlocksFocus="true"
        android:layout_marginBottom="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/textView33">
        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:id="@+id/write"
            android:src="@drawable/write"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_alignStart="@+id/about"
            android:layout_below="@+id/textView27"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Notifications"
            android:id="@+id/textView22"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:layout_below="@+id/notification"
            android:layout_alignRight="@+id/notification"
            android:layout_alignEnd="@+id/notification"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:id="@+id/rate"
            android:src="@drawable/rate"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/view2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:id="@+id/about"
            android:src="@drawable/about"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_alignStart="@+id/night"
            android:layout_below="@+id/view2"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/night"
            android:src="@drawable/lightoff"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp" />

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:id="@+id/privacy"
            android:src="@drawable/privacy"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view2"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/noimage"
            android:src="@drawable/image"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_alignStart="@+id/rate"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp" />

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:id="@+id/invite"
            android:src="@drawable/invite"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/textView25"
            android:layout_alignStart="@+id/privacy"
            android:layout_marginTop="30dp" />

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:id="@+id/shareApp"
            android:src="@drawable/share"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView26"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Write for us"
            android:id="@+id/textView23"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_below="@+id/write"
            android:layout_alignBottom="@+id/textView29"
            android:layout_alignLeft="@+id/write"
            android:layout_alignStart="@+id/write"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/notification"
            android:src="@drawable/bell"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Images"
            android:id="@+id/textView21"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_alignTop="@+id/textView22"
            android:layout_alignLeft="@+id/noimage"
            android:layout_alignStart="@+id/noimage"
            android:layout_alignRight="@+id/noimage"
            android:layout_alignEnd="@+id/noimage"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Twilight Mode"
            android:id="@+id/textView24"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_alignTop="@+id/textView21"
            android:layout_alignLeft="@+id/night"
            android:layout_alignStart="@+id/night"
            android:layout_alignRight="@+id/night"
            android:layout_alignEnd="@+id/night"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Privacy"
            android:id="@+id/textView25"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_below="@+id/privacy"
            android:layout_alignLeft="@+id/privacy"
            android:layout_alignStart="@+id/privacy"
            android:layout_alignRight="@+id/privacy"
            android:layout_alignEnd="@+id/privacy"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Rate us"
            android:id="@+id/textView26"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_below="@+id/rate"
            android:layout_alignLeft="@+id/rate"
            android:layout_alignStart="@+id/rate"
            android:layout_alignBottom="@+id/textView25"
            android:layout_alignRight="@+id/rate"
            android:layout_alignEnd="@+id/rate"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="About us"
            android:id="@+id/textView27"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_below="@+id/about"
            android:layout_alignLeft="@+id/about"
            android:layout_alignStart="@+id/about"
            android:layout_alignBottom="@+id/textView26"
            android:layout_alignRight="@+id/about"
            android:layout_alignEnd="@+id/about"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Invite"
            android:id="@+id/textView28"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_below="@+id/invite"
            android:layout_alignLeft="@+id/invite"
            android:layout_alignStart="@+id/invite"
            android:layout_alignRight="@+id/invite"
            android:layout_alignEnd="@+id/invite"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Share App"
            android:id="@+id/textView29"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_below="@+id/shareApp"
            android:layout_alignLeft="@+id/shareApp"
            android:layout_alignStart="@+id/shareApp"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:id="@+id/feedback"
            android:src="@drawable/feed"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_toRightOf="@+id/textView28"
            android:layout_toEndOf="@+id/textView28"
            android:layout_below="@+id/textView29"
            android:layout_marginTop="30dp" />

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:id="@+id/mailus"
            android:src="@drawable/mailus"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/textView23"
            android:layout_toRightOf="@+id/shareApp"
            android:layout_toEndOf="@+id/shareApp"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Contact Us"
            android:id="@+id/textView11"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_below="@+id/mailus"
            android:layout_alignLeft="@+id/mailus"
            android:layout_alignStart="@+id/mailus"
            android:textSize="12sp"
            android:layout_toLeftOf="@+id/textView23"
            android:layout_toStartOf="@+id/textView23" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Feedback"
            android:id="@+id/textView"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:layout_alignRight="@+id/feedback"
            android:layout_alignEnd="@+id/feedback"
            android:textSize="12sp"
            android:layout_below="@+id/feedback"
            android:layout_alignLeft="@+id/feedback"
            android:layout_alignStart="@+id/feedback" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffffff"
            android:id="@+id/view2"
            android:visibility="visible"
            android:layout_below="@+id/textView21"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Settings"
        android:id="@+id/textView33"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffffff"
        android:id="@+id/view2"
        android:visibility="visible"
        android:layout_alignParentTop="true" />


</RelativeLayout>
