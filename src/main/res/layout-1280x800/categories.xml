<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c3000000"
    android:id="@+id/bottom_sheet"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <RelativeLayout
        android:orientation="vertical" android:layout_width="wrap_content"
        android:id="@+id/categories"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="2"
        android:background="@drawable/round"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_centerInParent="true"
        android:layout_margin="50dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:padding="10dp"
            android:layout_columnWeight="1"
            android:background="#60eb4949"
            android:layout_rowWeight="1"
            android:id="@+id/linearLayout2"
            android:layout_below="@+id/linearLayout5"
            android:layout_toRightOf="@+id/linearLayout5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/bookmark"
                android:src="@drawable/bookmark2"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Bookmarks"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:padding="10dp"
            android:layout_columnWeight="1"
            android:background="#8300bcd4"
            android:id="@+id/linearLayout5"
            android:layout_below="@+id/linearLayout6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/linearLayout4"
            android:layout_toStartOf="@+id/linearLayout4">


            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/global"
                android:src="@drawable/global"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Global"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:padding="10dp"
            android:layout_columnWeight="1"
            android:background="#6c009688"
            android:id="@+id/linearLayout"
            android:layout_below="@+id/linearLayout5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/linearLayout8"
            android:layout_toStartOf="@+id/linearLayout8"
            android:layout_alignBottom="@+id/linearLayout2">


            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/business"
                android:src="@drawable/business"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Business &amp; Finance"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:padding="10dp"
            android:layout_columnWeight="1"
            android:background="#694caf50"
            android:id="@+id/linearLayout4"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignRight="@+id/linearLayout3"
            android:layout_alignEnd="@+id/linearLayout3"
            android:layout_alignLeft="@+id/linearLayout3"
            android:layout_alignStart="@+id/linearLayout3"
            android:layout_above="@+id/linearLayout8">


            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/finance"
                android:src="@drawable/money"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="My Finance"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:padding="10dp"
            android:layout_columnWeight="1"
            android:background="#81ffee58"
            android:layout_below="@+id/linearLayout6"
            android:layout_alignLeft="@+id/linearLayout4"
            android:layout_alignStart="@+id/linearLayout4"
            android:id="@+id/linearLayout8"
            android:layout_alignRight="@+id/linearLayout4"
            android:layout_alignEnd="@+id/linearLayout4">


            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/law"
                android:src="@drawable/law"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Law"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:padding="10dp"
            android:layout_columnWeight="1"
            android:background="#71e91e63"
            android:id="@+id/linearLayout6"
            android:layout_below="@+id/linearLayout7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/linearLayout3"
            android:layout_toStartOf="@+id/linearLayout3">


            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/economy"
                android:src="@drawable/economy"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Economy"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:padding="10dp"
            android:layout_columnWeight="1"
            android:background="#46607d8b"
            android:id="@+id/linearLayout3"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:id="@+id/tax"
                android:src="@drawable/tax"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Tax"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:padding="10dp"
            android:layout_columnWeight="1"
            android:background="#773f51b5"
            android:id="@+id/linearLayout7"
            android:layout_toLeftOf="@+id/linearLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/allnews"
                android:src="@drawable/news"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="All News"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Categories"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:layout_above="@+id/categories"
        android:layout_centerHorizontal="true"
        android:textSize="35sp" />

</RelativeLayout>
